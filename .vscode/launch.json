{
    "version": "0.2.0",
    "configurations": [

       
       
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "npm: NewPort",
            "type": "node"
        },

        {
            "type": "msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://localhost:7000"
        }
    ],
    "compounds": [
        {
            "name": "Launch Full",
            "configurations": [
                "Launch Program",
                "Launch Microsoft Edge"
            ]
        }
    ]
}